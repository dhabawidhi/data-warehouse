    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    @if (ViewBag.jumlahS1 == null || ViewBag.jumlahS1 == 0)
                    {<h4>Data Belum Terupdate</h4>}
